<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rasyidin.githubuser">

    <uses-permission android:name="android.permission.INTERNET" />

    <permission
        android:name="com.rasyidin.githubuser.READ_DATABASE"
        android:protectionLevel="normal" />
    <permission
        android:name="com.rasyidin.githubuser.WRITE_DATABASE"
        android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <receiver android:name=".widget.FavoriteWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/favorite_widget_info" />
        </receiver>
        <receiver
            android:name=".services.AlarmReceiver"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".ui.activity.SettingActivity" />

        <provider
            android:name=".provider.FavoriteProvider"
            android:authorities="com.rasyidin.githubuser"
            android:enabled="true"
            android:exported="true"
            android:readPermission="com.rasyidin.githubuser.READ_DATABASE"
            android:writePermission="com.rasyidin.githubuser.WRITE_DATABASE" />

        <activity android:name=".ui.activity.FavoriteActivity" />
        <activity android:name=".ui.activity.DetailUserActivity" />
        <activity android:name=".ui.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <service
            android:name=".services.StackWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />
    </application>

</manifest>